<div class="container">

  <h1>Contacts</h1>

  <table class="highlight">
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Email</th>
        <th>Phone</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @contacts.each do |contact| %>
        <tr>
          <td><%= contact.name %></td>
          <td><%= contact.address %></td>
          <td><%= contact.email %></td>
          <td><%= contact.phone %></td>
          <td><%= link_to '<i class="material-icons">pageview</i>'.html_safe, contact, class: 'index-icons' %></td>
          <% if @auth %>  
            <td><%= link_to '<i class="material-icons">edit</i>'.html_safe, edit_contact_path(contact), class: 'index-icons'%></td>
          <% end %>
            <td><%= link_to '<i class="material-icons">delete</i>'.html_safe, contact, method: :delete, data: { confirm: 'Are you sure?' }, class: 'index-icons' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Contact', new_contact_path, class: "waves-effect waves-light btn" %>
</div>