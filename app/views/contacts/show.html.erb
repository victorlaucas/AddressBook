<div class="container">

  <div class="row">
    <div class="col s12 m12 l12 xl12 center">
      <div class="card z-depth-5">
        <div class="card-content black-text">
          <span class="card-title">Card Title</span>
            <p>
              <strong>Name:</strong>
              <%= @contact.name %>
            </p>

            <p>
              <strong>Address:</strong>
              <%= @contact.address %>
            </p>

            <p>
              <strong>Email:</strong>
              <%= @contact.email %>
            </p>

            <p>
              <strong>Phone:</strong>
              <%= @contact.phone %>
            </p>
        </div>
        <div class="card-action">
          <a href="#"><%= link_to 'Edit', edit_contact_path(@contact), class: "waves-effect waves-light btn" %></a>
          <a href="#"><%= link_to 'Back', contacts_path, class: "waves-effect waves-light btn" %></a>
        </div>
      </div>
    </div>
  </div>
</div>  